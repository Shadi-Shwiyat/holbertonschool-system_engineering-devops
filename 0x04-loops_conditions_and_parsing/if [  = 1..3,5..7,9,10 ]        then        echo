#!/usr/bin/env bash
#Script uses while loop to pring Best School 10 times, and on the 4th iteration 
#Best School is replaced with bad luck, on the 8th iteration it's replaced with 
#good luck.

i=1
while [ $i -le 10 ]
do

	if [ $i = 4 ]
	then
		echo "bad luck"

	elif [ $i = 8 ]
	then
		echo "good luck"
	else
		echo "Best School"
	fi
	(( i++ ))
done
